---
import BaseLayout from './BaseLayout.astro';
const {frontmatter} = Astro.props;
---

<style>
  .meta-section {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: stretch;
    gap: 1rem;
  }

  .meta p,
  .description {
    margin: 0;
  }

  .meta {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: start;
    gap: 0.5rem;
    padding-bottom: 1rem;
  }

  .tags-container {
      display: flex;
      align-items: center;
      justify-content: start;
      gap: 1rem;
  }

  .tags {
      display: flex;
      align-items: center;
      justify-content: start;
      gap: 0.5rem;
  }
</style>

<BaseLayout pageTitle={frontmatter.title}>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="100%" height="300" />

  <div class="meta-section">
    <p class="description">
      <em>{frontmatter.description}</em>
    </p>

    <div class="meta">
      <p>Published At: {frontmatter.pubDate.slice(0, 10)}</p>
      <a href="/about">
        <p>Written By: {frontmatter.author}</p>
      </a>
    </div>

    <div class="tags-container">
      <p>Tags: </p>
      <div class="tags">
      {frontmatter.tags.map(tag => <p class="tag">{tag}</p>)}
      </div>
    </div>
  </div>

  <slot />
</BaseLayout>
