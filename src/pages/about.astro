---
import BaseLayout from '../layouts/BaseLayout.astro';
const pageTitle = "About Me";
const bio = {
  firstName: "Amir",
  lastName: "Aiman",
  occupation: "Software Engineer",
  hobbies: ["Ricing", "Writing", "Coding", "Reading"],
};

const skills = {
  languages: ["HTML", "CSS", "JS", "Typescript", "PHP", "Go", "Python"],
  frameworks: ["Express", "Laravel", "Codeigniter", "React", "jQuery"],
  libraries: ["Jest"],
};

const cssVars = {
  skillColor: "green",
  fontWeight: 600,
  textCase: "uppercase",
};
---

<style define:vars={cssVars}>
  .skill-container {
    margin-bottom: 1rem;
    border: 1px solid #333;
  }

  .skill-container .skill-header,
  .skill-container .skills {
    padding: 0.5rem 1rem;
  }

  .skill-container:last-child {
    margin-bottom: 0;
  }

  .skill-header {
    border-bottom: 1px solid #333;
    margin: 0;
  }

  .skills {
    display: flex;
    justify-content: start;
    align-items: start;
    flex-wrap: wrap;
    gap: 0.2rem;
    margin: 0;
    padding: 0 0 0 1rem;
    list-style: none;
  }

  .skill {
    color: #fff;
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);
    background-color: #444;
    padding: 0.1rem 0.5rem;
    border-radius: 9px;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
    <section>
      <h2>Who am I</h2>
      <p>
        I'm a {bio.occupation} from Houston, Texas. My specialty is in full-stack
        web development with a heavy emphasis on writing backend telecommunications
        services & highly-interactive graphical web apps.
      </p>
    </section>
    <section>
      <h2>Skills</h2>
      {
        Object.keys(skills).map((key) => {
          const contentHead = <h3 class="skill-header">{key.toUpperCase()}</h3>;
          const contentBody = skills[key].map((skill) => (
            <li class="skill">{skill}</li>
          ));

          return (
            <section class="skill-container">
              {contentHead}
              <ul class="skills">{contentBody}</ul>
            </section>
          );
        })
      }
    </section>
</BaseLayout>
